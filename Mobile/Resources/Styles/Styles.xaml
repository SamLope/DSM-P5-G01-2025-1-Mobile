<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Cores -->
    <Color x:Key="PrimaryColor">#fb8c00</Color>
    <Color x:Key="SecondaryColor">#fdd835</Color>
    <Color x:Key="AccentColor">#43a047</Color>
    <Color x:Key="ErrorColor">#e53935</Color>
    <Color x:Key="BackgroundColor">#FFFFFF</Color>
    <Color x:Key="TextColor">#555</Color>
    <Color x:Key="SubtitleColor">#888</Color>

    <!-- Estilo padrão para Labels -->
    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <!-- Estilo para botões principais -->
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource SecondaryColor}" />
        <Setter Property="TextColor" Value="Black" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="Padding" Value="14" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="WidthRequest" Value="200" />
    </Style>
</ResourceDictionary>
